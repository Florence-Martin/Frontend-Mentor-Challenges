{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env*", "ENABLE_TURBOPACK"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.json",
        "**/*.js",
        ".env*",
        "ENABLE_TURBOPACK"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
